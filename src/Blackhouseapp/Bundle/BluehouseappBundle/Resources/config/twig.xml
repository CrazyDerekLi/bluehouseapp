<?xml version="1.0" encoding="UTF-8"?>



<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="blackhouse.twig.extension.resource.class">Blackhouseapp\Bundle\BluehouseappBundle\Twig\ResourceExtension</parameter>

        <parameter key="blackhouse.twig.extension.resource.pagination_template">BlackhouseappBluehouseappBundle:Twig:paginate.html.twig</parameter>
        <parameter key="blackhouse.twig.extension.resource.sorting_template">BlackhouseappBluehouseappBundle:Twig:sorting.html.twig</parameter>
    </parameters>

    <services>
        <service id="blackhouse.twig.extension.resource" class="%blackhouse.twig.extension.resource.class%">
            <argument type="service" id="router" />
            <argument type="service" id="bluehouseapp.controller.parameters" />
            <argument>%blackhouse.twig.extension.resource.pagination_template%</argument>
            <argument>%blackhouse.twig.extension.resource.sorting_template%</argument>
            <tag name="twig.extension" />
            <tag name="kernel.event_listener" event="kernel.request" method="fetchRequest" />
        </service>
    </services>

</container>
