<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="bluehouseapp.mail.class">Blackhouseapp\Bundle\BluehouseappBundle\Service\MailService</parameter>
        <parameter key="bluehouseapp.post.class">Blackhouseapp\Bundle\BluehouseappBundle\Service\PostService</parameter>
        <parameter key="bluehouseapp.registration.listener.class">Blackhouseapp\Bundle\BluehouseappBundle\Listener\SecurityRegistrationListener</parameter>
        <parameter key="bluehouseapp.login.listener.class">Blackhouseapp\Bundle\BluehouseappBundle\Listener\LoginListener</parameter>


        <parameter key="bluehouseapp.controller.configuration_factory.class">Blackhouseapp\Bundle\BluehouseappBundle\Controller\Resource\ConfigurationFactory</parameter>


        <parameter key="bluehouseapp.controller.parameters_parser.class">Blackhouseapp\Bundle\BluehouseappBundle\Controller\Resource\ParametersParser</parameter>
        <parameter key="bluehouseapp.controller.parameters.class">Blackhouseapp\Bundle\BluehouseappBundle\Controller\Resource\Parameters</parameter>
        <parameter key="bluehouseapp.event_subscriber.load_orm_metadata.class">Blackhouseapp\Bundle\BluehouseappBundle\EventListener\LoadORMMetadataSubscriber</parameter>
        <parameter key="bluehouseapp.event_subscriber.kernel_controller.class">Blackhouseapp\Bundle\BluehouseappBundle\EventListener\KernelControllerSubscriber</parameter>
        <parameter key="bluehouseapp.event_subscriber.kernel_request.class">Blackhouseapp\Bundle\BluehouseappBundle\EventListener\KernelRequestSubscriber</parameter>


    </parameters>
    <services>

        <service id="bluehouseapp.controller.configuration_factory" class="%bluehouseapp.controller.configuration_factory.class%">
            <argument type="service" id="bluehouseapp.controller.parameters_parser" />
            <argument>%bluehouseapp.resource.settings%</argument>
        </service>
        <service id="bluehouseapp.controller.parameters_parser" class="%bluehouseapp.controller.parameters_parser.class%">

        </service>
        <service id="bluehouseapp.controller.parameters" class="%bluehouseapp.controller.parameters.class%" />


        <service id="bluehouseapp.controller.configuration_factory" class="%bluehouseapp.controller.configuration_factory.class%">
            <argument type="service" id="bluehouseapp.controller.parameters_parser" />
            <argument>%bluehouseapp.resource.settings%</argument>
        </service>

        <service id="bluehouseapp.event_subscriber.load_orm_metadata" class="%bluehouseapp.event_subscriber.load_orm_metadata.class%">
            <argument>%bluehouseapp.config.classes%</argument>
            <tag name="doctrine.event_subscriber" />
        </service>

        <service id="bluehouseapp.event_subscriber.kernel_controller" class="%bluehouseapp.event_subscriber.kernel_controller.class%">
            <argument type="service" id="bluehouseapp.controller.parameters_parser" />
            <argument type="service" id="bluehouseapp.controller.parameters" />
            <argument>%bluehouseapp.resource.settings%</argument>
            <tag name="kernel.event_subscriber" />
        </service>




        <service id="bluehouseapp.mail" class="%bluehouseapp.mail.class%">
            <argument type="service" id="mailer">mailer</argument>
            <argument type="service" id="templating">template</argument>
        </service>
        <service id="bluehouseapp.post" class="%bluehouseapp.post.class%" scope="request">
            <argument type="service" id="doctrine.orm.entity_manager">em</argument>
            <argument type="service" id="bluehouseapp.mail">mail</argument>
            <argument type="service" id="security.context">security</argument>
            <argument type="service" id="router">route</argument>
            <argument type="service" id="request">req</argument>
        </service>
        <service id="bluehouseapp.registrationListener" class="%bluehouseapp.registration.listener.class%">
            <tag name="kernel.event_subscriber"/>
            <argument type="service" id="doctrine.orm.entity_manager">em</argument>
            <argument type="service" id="router" />
        </service>
        <service id="bluehouseapp.LoginListener" class="%bluehouseapp.login.listener.class%">
            <tag name="kernel.event_listener" event="security.interactive_login" method="onSecurityInteractiveLogin"/>
            <argument type="service" id="doctrine.orm.entity_manager">em</argument>
            <argument type="service" id="router" />
	    <argument type="service" id="event_dispatcher" />
        </service>
    </services>

</container>
