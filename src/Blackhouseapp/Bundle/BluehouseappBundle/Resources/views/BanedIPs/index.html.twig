{% extends "BlackhouseappBluehouseappBundle:layout:layout.html.twig" %}
{% block title %}
    禁止IP管理
{% endblock %}

{% block body -%}

    <div class="page-header">
        <h2>Baned IP list <small></small></h2>
    </div>

    <table class="table  table-striped table-hover table-condensed">    
        <thead>
            <tr>
                <th>Id</th>
                <th>Ip</th>
                <th>Timestamp</th>
                <th>Fromdate</th>
                <th>Todate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_banedips_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.ip }}</td>
                <td>{{ entity.timestamp|date("Y-m-d H:i") }}</td>
                <td>{{ entity.fromDate|date("Y-m-d H:i") }}</td>
                <td>{{ entity.toDate|date("Y-m-d H:i") }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_banedips_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_banedips_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_banedips_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
