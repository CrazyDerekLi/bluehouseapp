                            <a
                                    href="{{ path('user_show', { 'username': member.username }) }}">
                                {% if member.nickname %}
                                    {{ member.nickname }}
                                {% else %}
                                    {{ member.username }}
                                {% endif %}
                            </a>
                        </strong>
                        {% endif %}
                    </span>
                                </td>
                                <td width="50" align="right" valign="middle">

                                    <a href="#" class="box-count-livid">{{ entity.commentCount }}</a>

                                </td>
                            </tr>
                            </tbody>

